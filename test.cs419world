@Camera
    pos 10.0 4.0 0.0
    lookat 0.0 0.0 0.0
    up 0.0 1.0 0.0
    pinhole 1.0 2.0

    
    
# Lights
@Light ambient  0.2   1.0 1.0 1.0
#@Light parallel  0.7   1.0 1.0 1.0   2.0 1.0 0.0
@Light point  1.0    1.0 1.0 1.0    4.0 6.0 -1.0
    
    
# Cache geometry
@Geometry Sphere1     sphere 1.0
@Geometry Sphere2     sphere 2.0
@Geometry Sphere1.5   sphere 1.5
    
    
sRed
    Transform 0.0 -1.0 3.0
    Geometry @Sphere1
    Material matte   0.4   2.0    1.0 0.0 0.0 1.0
    
sGreen
    Transform 0.0 0.0 0.0
    Geometry @Sphere2
    Material matte   0.4   2.0    0.3 1.0 0.3 1.0
    
sBlue
    Transform 0.0 -0.5 -3.5
    Geometry @Sphere1.5
    Material matte   0.4   2.0    0.0 0.0 1.0 1.0
    
floor
    Transform 0.0 -2.0 0.0
    Geometry plane   0.0 1.0 0.0
    Material matte   0.2   1.5    1.0 1.0 1.0 1.0
    
leftWall
    Transform 0.0 0.0 6.0
    Geometry plane   0.0 0.0 -1.0
    Material matte   0.2   1.5    1.0 1.0 1.0 1.0
    
rightWall
    Transform 0.0 0.0 -6.0
    Geometry plane   0.0 0.0 1.0
    Material matte   0.2   1.5    1.0 1.0 1.0 1.0
    
backWall
    Transform -3.0 0.0 0.0
    Geometry plane   1.0 0.0 0.0
    Material matte   0.2   1.5    1.0 1.0 1.0 1.0
    